<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/entryRow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/entryTime"
        android:layout_width="80dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/entryValue"        
        android:layout_width="80dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/editEntry"
        android:layout_width="70dp"
        android:layout_height="35dp"  
        android:onClick="editEntryButtonClickHandler"      
        android:text="Edit" />

    <Button
        android:id="@+id/deleteEntry"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:onClick="deleteEntryButtonClickHandler"
        android:text="Delete" />

</LinearLayout>